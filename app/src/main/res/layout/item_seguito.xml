<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/id_card_seguito"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardBackgroundColor="#BADDDDDD"
        app:cardCornerRadius="2dp"
        app:cardElevation="@dimen/activity_horizontal_margin"
        app:cardMaxElevation="10dp"
        app:contentPadding="@dimen/nav_header_vertical_spacing">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A1FFFFFF">

            <de.hdodenhof.circleimageview.CircleImageView

                android:id="@+id/image_card_seguito"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:clickable="false"
                android:src="@drawable/cuoca"
                android:translationX="0dp"
                android:translationY="0dp"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/id_nome_seguito"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="TextView"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/image_card_seguito"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>